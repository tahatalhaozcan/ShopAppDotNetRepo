@section Categories
{
    @await Component.InvokeAsync("Categories")
}
@model Product

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-3">
            <img src="~/images/@Model.imageUrl" class="card-img">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Price TL</p>
                <button class="btn-primary"> Sepete Ekle</button>


            </div>
        </div>
    </div>
</div>

